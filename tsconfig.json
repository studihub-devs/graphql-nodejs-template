{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "DOM",
      "esnext.bigint"
    ],
    "outDir": "dist",
    "sourceMap": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2019",
    "types": [
      // "reflect-metadata",
      "multer",
      "helmet",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    ".migrations/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}